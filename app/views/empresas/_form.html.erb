<%= form_with(model: empresa, local: true) do |form| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger"><%= flash[:alert] %></div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :telefone %>
    <%= form.telephone_field :telefone, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.submit empresa.new_record? ? "Criar Empresa" : "Atualizar Empresa", class: "btn btn-success" %>
  </div>
<% end %>

<div class="container mt-5">
  <h1 class="h3">Criar Novo Convite</h1>

  <%= form_with model: @convite, url: convites_path do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :empresa_id %>
      <%= form.collection_select :empresa_id, Empresa.all, :id, :nome, { prompt: 'Selecione a Empresa' }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, [['Ativo', 'ativo'], ['Inativo', 'inativo']], class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :data_envio %>
      <%= form.datetime_select :data_envio, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :administrador_id %>
      <%= form.collection_select :administrador_id, Administrador.all, :id, :nome, { prompt: 'Selecione o Administrador' }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Criar Convite', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<h1 class="text-center my-4">Entrar no Sistema</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: login_path, local: true, class: 'bg-light p-4 rounded shadow-sm' do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: 'form-label' %>
          <%= form.text_field :email, class: 'form-control', placeholder: 'Digite seu e-mail' %>
        </div>

        <div class="mb-3">
          <%= form.label :password, class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control', placeholder: 'Digite sua senha' %>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit "Login", class: 'btn btn-primary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
